<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="better_loading.FileUploadWithProgress">
        <div class="file-upload-container">
            <input type="file" class="file-input" t-on-change="uploadFile"/>
            <div class="upload-progress-wrapper">
                <progress max="100" t-att-value="progress" class="upload-progress-bar"></progress>
                <span t-esc="progress"/>% - <span t-esc="estimatedTime"/>
            </div>
        </div>
    </t>
</templates>


